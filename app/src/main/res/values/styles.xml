<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primaryButton" parent="Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">@dimen/offset_regular</item>
        <item name="android:layout_marginEnd">@dimen/offset_regular</item>
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:textSize">@dimen/text_size_18</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="customEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_marginStart">@dimen/offset_regular</item>
        <item name="android:layout_marginEnd">@dimen/offset_regular</item>
        <item name="android:paddingStart">@dimen/offset_medium</item>
        <item name="android:paddingEnd">@dimen/offset_medium</item>
        <item name="android:background">@drawable/edittext_background</item>
        <item name="android:textColorHint">@color/colorDarkGrey</item>
    </style>


</resources>